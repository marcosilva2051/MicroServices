@model ProductModel

<form asp-action="ProductCreate">
    <br/>
    <div class="container border p-3">
        <h1 class="text-primary">Create Product</h1>
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="Name" class="control-label pt-2" style="font-size=20px;"></label>
            </div>
            <div class="col-10">
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="Price" class="control-label pt-2" style="font-size=20px;"></label>
            </div>
            <div class="col-10">
                <input asp-for="Price" class="form-control"/>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="CategoryName" class="control-label pt-2" style="font-size=20px;"></label>
            </div>
            <div class="col-10">
                <input asp-for="CategoryName" class="form-control"/>
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="Description" class="control-label pt-2" style="font-size=20px;"></label>
            </div>
            <div class="col-10">
                <input asp-for="Description" class="form-control"/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="ImageURL" class="control-label pt-2" style="font-size=20px;"></label>
            </div>
            <div class="col-10">
                <input asp-for="ImageURL" class="form-control"/>
                <span asp-validation-for="ImageURL" class="text-danger"></span>
            </div>
            <div class ="col-5 offset-2">
                <a asp-action="ProductIndex" class="btn-primary btn-primary form-control">Back to Lista</a>
            </div>
            <div class ="col-5">
                <input type="submit" value="Create" class="btn-primary btn-sucess form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name ="_ValidationScriptsPartial">
}
